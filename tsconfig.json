{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/redux/*" : ["src/redux/*"],
      "@/common/*" : ["src/common/*"],
      "@/components/*" : ["src/components/*"],
      "@/hooks/*" : ["src/hooks/*"],
      "@/layout/*" : ["src/layout/*"],
      "@/pages/*" : ["src/pages/*"],
      "@/images/*" : ["src/images/*"],
      "@/utils/*" : ["src/utils/*"],
      "@/static/*" : ["src/static/*"],
      "@/styles/*" : ["src/styles/*"],

    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
